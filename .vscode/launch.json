	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'competitive_templates'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=competitive-templates"
				],
				"filter": {
					"name": "competitive_templates",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'main'",
